# -*- python -*- 

from ctypes import CDLL
from pathlib import Path
import glob

__version__ = "@VERSION@"

# open shared library
LIB = None
print(f'looking for shared library under {__path__[0] + "/.."}')
for libfile in Path(__path__[0] + '/..').glob('libmint.cpython*'):
    print(f'libfile = {libfile}')
    LIB = CDLL(libfile)
    if LIB:
        break
if not LIB:
    raise RuntimeError('could not find libmint shared library')

__all__ = [LIB, 'regrid_edges', 'grid', 'polyline_integral']

from .regrid_edges import RegridEdges
from .grid import Grid
from .polyline_integral import PolylineIntegral

